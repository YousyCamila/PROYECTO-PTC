<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/dark_gray">

    <!-- Botón de Volver - Estilo industrial -->
    <ImageButton
        android:id="@+id/btnVolver"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_back"
        android:background="@drawable/bg_round_button"
        android:contentDescription="@string/volver"
        app:tint="@color/tech_blue"
        android:elevation="2dp"
        android:layout_marginBottom="24dp"/>

    <!-- Lista de Casos - Estilo tipo tarjetas tecnológicas -->
    <ListView
        android:id="@+id/listViewCasos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:paddingVertical="8dp"
        android:scrollbarStyle="outsideOverlay"/>

    <!-- Botón para Crear Caso - Estilo llamativo pero profesional -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCrearCaso"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/crear_caso"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_add"
        app:iconTint="@color/white"
        app:backgroundTint="@color/tech_blue"
        android:elevation="6dp"
        app:strokeColor="@color/dark_blue"
        app:strokeWidth="1dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

</LinearLayout>