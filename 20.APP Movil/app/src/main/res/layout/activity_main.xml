<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center"
              android:padding="24dp"
              android:background="@color/blancoHueso"
              tools:context=".MainActivity">

    <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido al Sistema"
            android:textSize="24sp"
            android:textColor="#1F2937"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

    <Button
            android:id="@+id/btnContratos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gesti贸n de Contratos"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3B82F6"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

    <Button
            android:id="@+id/btnClientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gesti贸n de Clientes"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3B82F6"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

    <Button
            android:id="@+id/btnDetectives"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gesti贸n de Detectives"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3B82F6"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

    <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesi贸n"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnClientes"
            android:layout_marginTop="20dp"/>


</LinearLayout>
