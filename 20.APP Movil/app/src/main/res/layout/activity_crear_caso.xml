<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/dark_gray">

    <!-- BotÃ³n de Volver -->
    <ImageButton
        android:id="@+id/btnVolver"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_back"
        android:background="@drawable/bg_round_button"
        android:contentDescription="@string/volver"
        app:tint="@color/tech_blue"
        android:elevation="2dp"
        android:layout_marginBottom="24dp"/>

    <!-- Campo Nombre del Caso -->
    <EditText
        android:id="@+id/etNombreCaso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Caso"
        android:padding="15dp"
        android:background="@drawable/bg_edit_text"
        android:textSize="16sp"
        android:textColor="@color/dark_blue"
        android:layout_marginBottom="16dp"/>

    <!-- Campo ID del Cliente -->
    <EditText
        android:id="@+id/etIdCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID del Cliente"
        android:padding="15dp"
        android:background="@drawable/bg_edit_text"
        android:textSize="16sp"
        android:textColor="@color/dark_blue"
        android:layout_marginBottom="16dp"/>


    <!-- Campo ID del Detective -->
    <EditText
        android:id="@+id/etIdDetective"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID del Detective"
        android:padding="15dp"
        android:background="@drawable/bg_edit_text"
        android:textSize="16sp"
        android:textColor="@color/dark_blue"
        android:layout_marginBottom="16dp"/>
    <!-- Switch para Estado Activo -->


    <Switch
        android:id="@+id/switchActivo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:thumbTint="@color/tech_blue"
        android:trackTint="@color/light_gray" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@color/tech_blue"
        android:layout_marginTop="24dp"/>

</LinearLayout>
