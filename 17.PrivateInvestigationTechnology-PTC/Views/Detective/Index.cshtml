@model IEnumerable<_17.PrivateInvestigationTechnology_PTC.Models.Detective>

@{
    ViewData["Title"] = "Lista de Detectives";
}

<h2>Lista de Detectives</h2>

<!-- Mensaje de éxito -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<!-- Mensaje de error -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<!-- Tabla de detectives -->
<table id="detectiveTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nombre de Usuario</th>
            <th>Email</th>
            <th>PhoneNumber</th>
            <th>FullName</th>
            <th>Número de Identidad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detective in Model)
        {
            <tr>
                <td>@detective.IdentityUser.UserName</td>
                <td>@detective.IdentityUser.Email</td>
                <td>@detective.IdentityUser.PhoneNumber</td>
                <td>@detective.IdentityUser.FullName</td>
                <td>@detective.NumeroIdentidad</td>
                <td>
                    <a href="@Url.Action("Details", new { id = detective.Id })" class="btn btn-info">Detalles</a>
                    <a href="@Url.Action("Edit", new { id = detective.Id })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Delete", new { id = detective.Id })" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-success">Crear Nuevo Detective</a>

@section Scripts {
    <!-- Scripts de DataTables y Bootstrap -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>

    <!-- Inicialización de DataTables -->
    <script>
        $(document).ready(function () {
            $('#detectiveTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/Spanish.json"
                }
            });
        });
    </script>
}

<!-- Estilos de DataTables y Bootstrap -->
<link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
