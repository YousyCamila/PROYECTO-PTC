@model IEnumerable<_17.PrivateInvestigationTechnology_PTC.Models.Detective>

@{
    ViewData["Title"] = "Lista de Detectives";
}

<h2 class="text-center">Lista de Detectives</h2>

<!-- Botón para volver al menú -->
<div class="text-right mb-3">
    <a href="/AdministradorLogin/Index" class="btn btn-secondary">Volver al Menú</a>
</div>

<!-- Tabla de detectives con DataTables y estilo Bootstrap -->
<table id="detectivesTable" class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Nombre</th>
            <th>Número de Identidad</th>
            <th>Número de Celular</th>
            <th>Fecha de Nacimiento</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detective in Model)
        {
            <tr>
                <td>@detective.Nombre</td>
                <td>@detective.NumeroIdentidad</td>
                <td>@detective.NumeroCelular</td>
                <td>@detective.FechaNacimiento?.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@detective.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@detective.Id" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@detective.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Scripts de DataTables -->
@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#detectivesTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/Spanish.json"
                }
            });
        });
    </script>
}

<!-- Enlaces a los estilos de DataTables y Bootstrap -->
<link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
