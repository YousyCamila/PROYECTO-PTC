@model _17.PrivateInvestigationTechnology_PTC.Models.Detective

@{
    ViewData["Title"] = "Eliminar Detective";
}

<h2>Eliminar Detective</h2>

<h3>¿Está seguro que desea eliminar este detective?</h3>
<div>
    <h4>Detective</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Número de Identidad</dt>
        <dd class="col-sm-10">@Model.NumeroIdentidad</dd>

        <dt class="col-sm-2">Número de Celular</dt>
        <dd class="col-sm-10">@Model.NumeroCelular</dd>

        <dt class="col-sm-2">Fecha de Nacimiento</dt>
        <dd class="col-sm-10">@Model.FechaNacimiento?.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Eliminar" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
