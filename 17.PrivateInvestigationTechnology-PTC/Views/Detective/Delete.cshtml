@model _17.PrivateInvestigationTechnology_PTC.Models.Detective

@{
    ViewData["Title"] = "Eliminar Detective";
}

<h2>Eliminar Detective</h2>

<h3>¿Estás seguro de que deseas eliminar este detective?</h3>
<div>
    <h4>@Model.IdentityUser?.FullName</h4>
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.IdentityUser?.Email</dd>

        <dt class="col-sm-2">Número de Teléfono</dt>
        <dd class="col-sm-10">@Model.IdentityUser?.PhoneNumber</dd>

        <dt class="col-sm-2">Número de Identidad</dt>
        <dd class="col-sm-10">@Model.NumeroIdentidad</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
