@model _17.PrivateInvestigationTechnology_PTC.Models.Detective

@{
    ViewData["Title"] = "Detalles del Detective";
}

<h2>Detalles del Detective</h2>

<div class="card mb-3">
    <div class="row no-gutters">
        <div class="col-md-4">
            @if (Model.FotoPerfil != null)
            {
                <img src="data:image;base64,@Convert.ToBase64String(Model.FotoPerfil)" alt="Foto de Perfil" class="card-img-top" style="max-width: 100%; max-height: 300px;" />
            }
            else
            {
                <img src="https://via.placeholder.com/300" alt="Sin Foto de Perfil" class="card-img-top" />
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">Detalles del Detective</h5>
                <p class="card-text"><strong>Nombre Completo:</strong> @Model.IdentityUser.FullName</p>
                <p class="card-text"><strong>Email:</strong> @Model.IdentityUser.Email</p>
                <p class="card-text"><strong>Phone Number:</strong> @Model.IdentityUser.PhoneNumber</p>
                <p class="card-text"><strong>Número de Identidad:</strong> @Model.NumeroIdentidad</p>

                @if (Model.HojaDeVida != null)
                {
                    <a href="@Url.Action("VerHojaDeVida", new { id = Model.Id })" class="btn btn-info">Ver Hoja de Vida (PDF)</a>
                }
                else
                {
                    <p>No hay hoja de vida disponible.</p>
                }

                <p class="card-text">
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Volver a la Lista</a>
                </p>
            </div>
        </div>
    </div>
</div>
