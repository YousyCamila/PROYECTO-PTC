@model _17.PrivateInvestigationTechnology_PTC.Models.Detective

@{
    ViewData["Title"] = "Editar Detective";
}

<h2>Editar Detective</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="email" value="@Model.IdentityUser?.Email" required />
    </div>

    <div class="form-group">
        <label for="PhoneNumber">Phone Number</label>
        <input type="text" class="form-control" id="PhoneNumber" name="phoneNumber" value="@Model.IdentityUser?.PhoneNumber" required />
    </div>

    <div class="form-group">
        <label for="FullName">Full Name</label>
        <input type="text" class="form-control" id="FullName" name="fullName" value="@Model.IdentityUser?.FullName" required />
    </div>

    <div class="form-group">
        <label for="NumeroIdentidad">Número de Identidad</label>
        <input type="text" class="form-control" asp-for="NumeroIdentidad" required />
    </div>

    <div class="form-group">
        <label for="HojaDeVidaFile">Subir nueva Hoja de Vida (opcional)</label>
        <input type="file" class="form-control-file" id="HojaDeVidaFile" name="HojaDeVidaFile" />
    </div>

    <div class="form-group">
        <label for="FotoPerfilFile">Subir nueva Foto de Perfil (opcional)</label>
        <input type="file" class="form-control-file" id="FotoPerfilFile" name="FotoPerfilFile" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>
