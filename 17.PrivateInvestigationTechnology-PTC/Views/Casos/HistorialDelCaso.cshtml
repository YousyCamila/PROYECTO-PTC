@model IEnumerable<_17.PrivateInvestigationTechnology_PTC.Models.Historial>

@{
    ViewData["Title"] = "Historial del Caso";
}

<h1>Historial del Caso</h1>

<table class="table">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Descripción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var historial in Model)
        {
            <tr>
                <td>@historial.Fecha.ToShortDateString()</td>
                <td>@historial.Descripcion</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Volver a la lista de Casos</a>
