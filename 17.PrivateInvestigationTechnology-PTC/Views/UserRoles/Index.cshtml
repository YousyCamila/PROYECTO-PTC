@model IEnumerable<_17.PrivateInvestigationTechnology_PTC.Models.ViewModels.UserRolesViewModel>

<h2>Usuarios y Roles</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    @if (user.Roles != null && user.Roles.Count > 0)
                    {
                        @string.Join(", ", user.Roles)
                    }
                    else
                    {
                        <span>No tiene roles asignados</span>
                    }
                </td>
                <td>
                    <a asp-action="Manage" asp-route-userId="@user.UserId" class="btn btn-sm btn-primary">Gestionar Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
