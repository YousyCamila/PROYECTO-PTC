@model _17.PrivateInvestigationTechnology_PTC.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h2>Eliminar Cliente</h2>

<h3>¿Estás seguro que deseas eliminar este cliente?</h3>

<div class="card">
    <div class="card-header">
        <h4>@Model.Nombre</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Número de Identidad</dt>
            <dd class="col-sm-9">@Model.NumeroIdentidad</dd>

            <dt class="col-sm-3">Número de Celular</dt>
            <dd class="col-sm-9">@Model.NumeroCelular</dd>

            <dt class="col-sm-3">Fecha de Nacimiento</dt>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>
