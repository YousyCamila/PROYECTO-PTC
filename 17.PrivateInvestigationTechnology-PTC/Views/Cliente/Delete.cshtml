@model _17.PrivateInvestigationTechnology_PTC.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h2>Eliminar Cliente</h2>

<h3>¿Estás seguro que deseas eliminar este cliente?</h3>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.IdentityUser.Email</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.IdentityUser.PhoneNumber</dd>

        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.IdentityUser.FullName</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
