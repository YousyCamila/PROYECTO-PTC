@model _17.PrivateInvestigationTechnology_PTC.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<h2>Editar Cliente</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="IdentityUser.Email" class="control-label"></label>
        <input asp-for="IdentityUser.Email" class="form-control" />
        <span asp-validation-for="IdentityUser.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdentityUser.PhoneNumber" class="control-label"></label>
        <input asp-for="IdentityUser.PhoneNumber" class="form-control" />
        <span asp-validation-for="IdentityUser.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdentityUser.FullName" class="control-label"></label>
        <input asp-for="IdentityUser.FullName" class="form-control" />
        <span asp-validation-for="IdentityUser.FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
    </div>
</form>

<div>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Volver</a>
</div>
