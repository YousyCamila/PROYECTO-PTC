@model _17.PrivateInvestigationTechnology_PTC.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<h2>Editar Cliente</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="NumeroIdentidad">Número de Identidad</label>
        <input asp-for="NumeroIdentidad" class="form-control" />
        <span asp-validation-for="NumeroIdentidad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="NumeroCelular">Número de Celular</label>
        <input asp-for="NumeroCelular" class="form-control" />
        <span asp-validation-for="NumeroCelular" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
