@model _17.PrivateInvestigationTechnology_PTC.Models.Administrador

@{
    ViewData["Title"] = "Detalles del Administrador";
}

<h2>Detalles del Administrador</h2>

<div>
    <h4>Administrador</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Número de Identidad</dt>
        <dd class="col-sm-10">@Model.NumeroIdentidad</dd>

        <dt class="col-sm-2">Número de Celular</dt>
        <dd class="col-sm-10">@Model.NumeroCelular</dd>

        @if (Model.HojaDeVida != null)
        {
            <dt class="col-sm-2">Hoja de Vida</dt>
            <dd class="col-sm-10">
                <a asp-action="DownloadCV" asp-route-id="@Model.Id" class="btn btn-info">Descargar Hoja de Vida</a>
            </dd>
        }
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
