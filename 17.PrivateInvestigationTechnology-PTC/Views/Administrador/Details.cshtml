@model _17.PrivateInvestigationTechnology_PTC.Models.Administrador

@{
    ViewData["Title"] = "Detalles del Administrador";
}

<h2>Detalles del Administrador</h2>

<div>
    <h4>Administrador</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.IdentityUser?.Email</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.IdentityUser?.PhoneNumber</dd>

        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.IdentityUser?.FullName</dd>

        <dt class="col-sm-2">Número de Identidad</dt>
        <dd class="col-sm-10">@Model.NumeroIdentidad</dd>

        <dt class="col-sm-2">Hoja de Vida</dt>
        <dd class="col-sm-10">
            @if (Model.HojaDeVida != null)
            {
                <a class="btn btn-info" asp-action="PreviewHojaDeVida" asp-route-id="@Model.Id" target="_blank">Ver Hoja de Vida</a>
                <a class="btn btn-success" asp-action="DownloadHojaDeVida" asp-route-id="@Model.Id">Descargar Hoja de Vida</a>
            }
            else
            {
                <span>No disponible</span>
            }
        </dd>

        <dt class="col-sm-2">Foto de Perfil</dt>
        <dd class="col-sm-10">
            @if (Model.FotoPerfil != null)
            {
                <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.FotoPerfil))" alt="Foto de Perfil" width="150" height="150" />
            }
            else
            {
                <span>No disponible</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
