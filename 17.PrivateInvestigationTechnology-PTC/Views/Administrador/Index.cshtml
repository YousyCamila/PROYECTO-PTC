@model IEnumerable<_17.PrivateInvestigationTechnology_PTC.Models.Administrador>

@{
    ViewData["Title"] = "Lista de Administradores";
}

<h2>Lista de Administradores</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Número de Identidad</th>
            <th>Número de Celular</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var administrador in Model)
        {
            <tr>
                <td>@administrador.Nombre</td>
                <td>@administrador.NumeroIdentidad</td>
                <td>@administrador.NumeroCelular</td>
                <td>
                    <a asp-action="Details" asp-route-id="@administrador.Id" class="btn btn-info">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@administrador.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@administrador.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Crear Administrador</a>
