@model _17.PrivateInvestigationTechnology_PTC.Models.Administrador

@{
    ViewData["Title"] = "Editar Administrador";
}

<h2>Editar Administrador</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="NumeroIdentidad">Número de Identidad</label>
        <input asp-for="NumeroIdentidad" class="form-control" />
        <span asp-validation-for="NumeroIdentidad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="NumeroCelular">Número de Celular</label>
        <input asp-for="NumeroCelular" class="form-control" />
        <span asp-validation-for="NumeroCelular" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="HojaDeVidaFile">Actualizar Hoja de Vida (opcional)</label>
        <input asp-for="HojaDeVida" type="file" class="form-control" />
        <span asp-validation-for="HojaDeVida" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</form>
