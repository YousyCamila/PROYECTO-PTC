@model _17.PrivateInvestigationTechnology_PTC.Models.Administrador

@{
    ViewData["Title"] = "Editar Administrador";
}

<h2>Editar Administrador</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="NumeroIdentidad" class="control-label"></label>
        <input asp-for="NumeroIdentidad" class="form-control" />
        <span asp-validation-for="NumeroIdentidad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="HojaDeVidaFile">Subir nueva Hoja de Vida (opcional)</label>
        <input type="file" name="HojaDeVidaFile" class="form-control-file" />
    </div>

    <div class="form-group">
        <label for="FotoPerfilFile">Subir nueva Foto de Perfil (opcional)</label>
        <input type="file" name="FotoPerfilFile" class="form-control-file" />
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</form>
